<Window x:Class="LocationVoiture.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion Admin" Height="300" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="#4CAF50" BorderThickness="2">
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="LOCATION VOITURE" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#333333" Margin="0,0,0,20"/>

            <TextBlock Text="Email :" Foreground="Gray"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,15" Text="admin@locavoiture.com"/>

            <TextBlock Text="Mot de passe :" Foreground="Gray"/>
            <PasswordBox x:Name="txtPass" Height="30" Margin="0,5,0,20"/>

            <Button Content="SE CONNECTER" Height="40" Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" Click="btnLogin_Click" BorderThickness="0"/>

            <Button Content="Quitter" Margin="0,10,0,0" Background="Transparent" 
                    Foreground="Red" BorderThickness="0" Click="btnQuitter_Click"/>
        </StackPanel>
    </Border>
</Window>