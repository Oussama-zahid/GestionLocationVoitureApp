<Window x:Class="LocationVoiture.WPF.EntretienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion d'Entretien" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="✅ Voitures Disponibles" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgDisponibles" Grid.Row="1" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Marque" Binding="{Binding Marque}"/>
                <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}"/>
                <DataGridTextColumn Header="Immat" Binding="{Binding Immatriculation}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Envoyer en Entretien ➡️" Background="#FFC107" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" Height="35" Click="btnEnvoyer_Click"/>

        <TextBlock Text="🔧 En Entretien" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="2" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgEntretien" Grid.Row="1" Grid.Column="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Marque" Binding="{Binding Marque}"/>
                <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}"/>
                <DataGridTextColumn Header="Immat" Binding="{Binding Immatriculation}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="⬅️ Terminer Entretien (Rendre Dispo)" Background="#4CAF50" Foreground="White" Grid.Row="2" Grid.Column="2" Margin="0,10,0,0" Height="35" Click="btnTerminer_Click"/>
    </Grid>
</Window>