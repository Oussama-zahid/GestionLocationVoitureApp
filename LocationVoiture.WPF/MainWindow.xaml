<Window x:Class="LocationVoiture.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocationVoiture.WPF"
        mc:Ignorable="d"
        Title="Gestion Location Voiture - Admin" Height="650" Width="1100" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15" HorizontalAlignment="Right">
            <Button Content="📊 Dashboard" Width="140" Height="35" Margin="0,0,10,0" 
                    Click="btnOpenDashboard_Click" 
                    Background="#2196F3" Foreground="White" FontWeight="Bold" FontSize="14"/>

            <Button Content="🔧 Entretien" Width="140" Height="35" 
                    Click="btnOpenEntretien_Click" 
                    Background="#FF9800" Foreground="White" FontWeight="Bold" FontSize="14"/>
        </StackPanel>

        <TabControl Grid.Row="1">

            <TabItem Header="🚗 Gestion des Voitures" FontSize="16">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button x:Name="btnAjouter" Content="➕ Nouvelle Voiture" Width="160" Height="30" 
                                Click="btnAjouter_Click" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>

                        <Button x:Name="btnSupprimer" Content="🗑️ Supprimer" Width="120" Height="30" 
                                Click="btnSupprimer_Click" Background="#F44336" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>

                        <Button Content="Actualiser" Width="100" Height="30" Click="btnCharger_Click"/>
                        <TextBlock Text="Rechercher :" VerticalAlignment="Center" Margin="20,0,5,0" FontWeight="Bold"/>
                        <TextBox x:Name="txtRecherche" Width="200" Height="30" VerticalContentAlignment="Center" TextChanged="txtRecherche_TextChanged"/>
                            
                    </StackPanel>

                    <DataGrid x:Name="dgVoitures" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                              BorderBrush="LightGray" BorderThickness="1" AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                            <DataGridTextColumn Header="Marque" Binding="{Binding Marque}" Width="100"/>
                            <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}" Width="120"/>
                            <DataGridTextColumn Header="Année" Binding="{Binding Annee}" Width="60"/>
                            <DataGridTextColumn Header="Carburant" Binding="{Binding Carburant}" Width="80"/>
                            <DataGridTextColumn Header="Prix/Jour" Binding="{Binding PrixParJour, StringFormat={}{0:N2} DH}" Width="90" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Immat." Binding="{Binding Immatriculation}" Width="100"/>
                            <DataGridTextColumn Header="Transmission" Binding="{Binding Transmission}" Width="100"/>

                            <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="100" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="📅 Gestion des Locations" FontSize="16">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Actions :" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                        <Button x:Name="btnValider" Content="✅ Valider la demande" Width="170" Height="30" 
                                Click="btnValider_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>

                        <Button x:Name="btnRefuser" Content="❌ Refuser" Width="100" Height="30" 
                                Click="btnRefuser_Click" Background="#F44336" Foreground="White" FontWeight="Bold"/>

                        <CheckBox Content="Voir seulement 'En attente'" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="20,0,0,0" x:Name="chkFiltre" Click="btnRefreshLoc_Click"/>

                        <Button Content="Actualiser" Width="100" Height="30" 
                                Click="btnRefreshLoc_Click" Margin="10,0,0,0"/>
                    </StackPanel>

                    <DataGrid x:Name="dgLocations" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                              BorderBrush="LightGray" BorderThickness="1" AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                            <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" Width="150"/>
                            <DataGridTextColumn Header="Voiture" Binding="{Binding VoitureModele}" Width="180"/>
                            <DataGridTextColumn Header="Du" Binding="{Binding DateDebut, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Au" Binding="{Binding DateFin, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Prix Total" Binding="{Binding PrixTotal, StringFormat={}{0:N2} DH}" Width="100" FontWeight="Bold" Foreground="#2E7D32"/>
                            <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="100" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>