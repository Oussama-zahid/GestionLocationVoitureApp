@model List<LocationVoiture.Core.Models.Voiture>

@{
    ViewData["Title"] = "Accueil";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bienvenue chez LocationVoiture</h1>
    <p>Trouvez le véhicule parfait pour votre prochain trajet.</p>
</div>

<div class="row">
    @foreach (var voiture in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div style="height: 200px; overflow: hidden;">
                    <img src="@Url.Action("GetImage", "Home", new { id = voiture.Id })"
                         class="card-img-top"
                         alt="@voiture.Modele"
                         style="object-fit: cover; height: 100%; width: 100%;">
                </div>

                <div class="card-body">
                    <h5 class="card-title">@voiture.Marque @voiture.Modele</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@voiture.Annee - @voiture.Carburant</h6>

                    <p class="card-text">
                        <strong>Prix : </strong> <span class="text-success h5">@voiture.PrixParJour DH</span> / jour<br />
                        <small>Transmission : @voiture.Transmission</small>
                    </p>
                </div>

                <div class="card-footer bg-white border-top-0">
                    @if (voiture.Statut == "Disponible")
                    {
                        <a asp-controller="Location" asp-action="Reserver" asp-route-id="@voiture.Id" class="btn btn-primary w-100">Réserver</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100" disabled>@voiture.Statut</button>
                    }
                </div>
            </div>
        </div>
    }
</div>